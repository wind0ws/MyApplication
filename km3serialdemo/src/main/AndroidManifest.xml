<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.michael.km3serialdemo" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name=".Application">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ConsoleActivity"/>
        <activity android:name=".CarParserTestActivity"/>
        <activity android:name=".CarConsoleActivity"/>
        <activity android:name=".GpsConsoleActivity"/>
        <activity android:name=".GpsParserTestActivity"/>
        <activity android:name=".CarAndGpsActivity"/>
        <activity android:name=".SerialPortPreferences"/>
    </application>

</manifest>
