<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="MyTheme"> <!-- 为样式定义一个全局唯一的名字-->
    <item name="android:textSize">28sp</item> <!-- name属性为样式要用在的View控件持有的属性 -->
    <item name="android:textColor">#0000CC</item>
        <item name="android:windowNoTitle">true</item><!--  没标题 -->
    <item name="android:windowFullscreen">true</item><!--  全屏显示 -->
    </style>

    <style name="SubMyTheme" parent="@style/MyTheme">
        <item name="android:textColor">#FF0000</item>
    </style>

</resources>
