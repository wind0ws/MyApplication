<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.michael.jiang.myandroid.SecondActivity"
    android:clickable="false">

    <TextView android:text="@string/displayMsg" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:id="@+id/txtViewreceiveMsg"
        android:textSize="@dimen/txtvew_noramsize" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_firstactivity"
        android:id="@+id/btn_first"
        android:layout_alignTop="@+id/btn_third"
        android:layout_toLeftOf="@+id/txtViewreceiveMsg"
        android:layout_toStartOf="@+id/txtViewreceiveMsg" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnthirdacitivity_txt"
        android:id="@+id/btn_third"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/txtViewreceiveMsg"
        android:layout_toEndOf="@+id/txtViewreceiveMsg"
        android:layout_marginBottom="43dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextContent"
        android:layout_above="@+id/btn_return"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="45dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tip_inputinfo"
        android:id="@+id/textView2"
        android:textSize="@dimen/txtvew_noramsize"
        android:layout_below="@+id/txtViewreceiveMsg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="56dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_return"
        android:id="@+id/btn_return"
        android:layout_marginBottom="49dp"
        android:layout_above="@+id/btn_first"
        android:layout_alignLeft="@+id/txtViewreceiveMsg"
        android:layout_alignStart="@+id/txtViewreceiveMsg" />

</RelativeLayout>
