<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/mainlayout">

    <TextView android:text="@string/hello" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtVewInfo"
        android:textSize="@dimen/txtvewinfo_txtsize"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="76dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnSecondActivity_txt"
        android:id="@+id/btnSecondActivity"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/txtVewInfo"
        android:layout_toStartOf="@+id/txtVewInfo"
        android:layout_marginBottom="49dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnthirdActivity"
        android:layout_alignTop="@+id/btnSecondActivity"
        android:layout_toRightOf="@+id/txtVewInfo"
        android:layout_toEndOf="@+id/txtVewInfo"
        android:text="@string/btnthirdacitivity_txt" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextContent"
        android:layout_above="@+id/btnSecondActivity"
        android:layout_marginBottom="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tipInputContent"
        android:id="@+id/textView"
        android:layout_marginBottom="37dp"
        android:layout_above="@+id/editTextContent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="@dimen/txtvewinfo_txtsize" />

</RelativeLayout>
