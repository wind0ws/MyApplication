<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="判断网络是否连接"
        android:id="@+id/btnNetwork"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:onClick="onClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WiFI打开/关闭"
        android:id="@+id/btnOpenCloseWiFi"
        android:layout_below="@+id/btnNetwork"
        android:layout_alignEnd="@+id/btnNetwork"
        android:layout_alignParentStart="true"
        android:onClick="onClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="获取音量"
        android:id="@+id/btnVolumeState"
        android:layout_below="@+id/btnOpenCloseWiFi"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/btnOpenCloseWiFi"
        android:onClick="onClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="获取程序包名"
        android:id="@+id/btnGetPkgName"
        android:layout_below="@+id/btnVolumeState"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/btnVolumeState"
        android:onClick="onClick" />

</RelativeLayout>
