<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
<CheckBoxPreference
    android:key="PREF_AUTO_UPDATE"
    android:title="自动更新"
    android:summary="是否自动更新地震内容"
    android:defaultValue="true"/>
    <ListPreference
        android:key="PREF_FREQ"
        android:entries="@array/update_freq_options"
        android:entryValues="@array/update_freq_values"
        android:defaultValue="60"
        android:title="更新频率"
        android:summary="设置自动更新频率"
        />
    <ListPreference
        android:key="PREF_MIN_MAGNITUDE"
        android:entries="@array/min_magnitude_options"
        android:entryValues="@array/min_magnitude_values"
        android:title="最小震级"
        android:summary="选择最小震级"
        android:defaultValue="3"
/>

</PreferenceScreen>